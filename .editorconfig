# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

# JSON
[**.json]
indent_size = 2

# Minified files
[**.min.*]
indent_style = ignore

# Markdown
[**.md]
trim_trailing_whitespace = false
